<h1>User Login Page</h1>

<%= form_for(@user, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
    <%= f.hidden_field(:referral_path, value: @referral_path) if @referral_path %>

  <div class="actions">
    <%= f.submit "Login!" %>
  </div>
  
<% end %>




