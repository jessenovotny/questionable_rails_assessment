<h1>User Login Page</h1>

<%= form_for(@user, url: login_path) do |f| %>

  <div class="field_with_errors">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field_with_errors">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Login!" %>
  </div>
<% end %>




