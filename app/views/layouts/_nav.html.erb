<div><h1><%= link_to "QUESTIONABLE", root_path %></h1></div>

<% if logged_in? %>

  Welcome, <%= link_to(current_user.username, user_answers_path(current_user)) %>! | 
  <%= link_to("Favorited Q's", user_favorites_path(current_user)) %> | 
  <%= link_to("Ask A Question", new_user_question_path(current_user)) %> | 
  <%= link_to("Logout", logout_path, method: 'DELETE') %>

