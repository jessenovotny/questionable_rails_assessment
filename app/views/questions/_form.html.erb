<%= form_for([user, question]) do |f| %>

  <div class="field">
    <%= text_area_tag 'question[content]', question.content , placeholder: "Ask your question here:", rows: 5, cols: 30%>
  </div>

  <div class="checkbox_container">
    <%= collection_check_boxes(:question, :category_ids, Category.all, :id, :name) %>
  </div>

  <%= f.fields_for :categories, @question.categories.build do |categories_fields|  %>
    <%= categories_fields.text_field :name, placeholder: "Create New Category" %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>