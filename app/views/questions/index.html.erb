<h1>Questions</h1>
<ul>
  <% @questions.limit(10).each do |question| %>
    <h3><%= link_to "#{question.content}", question %></h3>
    <div>
    
     <%= question.top_answer.try(:content) || "Answer this question" %>
     <%= button_to "Upvote #{question.top_answer.upvote_count}", answer_upvotes_path(question.top_answer) %>
      
    </div>
    <% if question.asker == current_user %>
      <div>
        <%= link_to 'Edit', edit_user_question_path(current_user, question) %> | 
        <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>  
      </div>
    <% end %>
  <% end %>
</ul>