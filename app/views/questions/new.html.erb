<h1>New Question</h1>

<%= form_for(@question, url: user_questions_path(current_user)) do |f| %>

  <div class="field-with-errors">
    <%= text_area_tag 'question[content]', "Ask your question here:", rows: 5, cols: 30%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', questions_path %>
