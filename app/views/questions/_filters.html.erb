<%= form_tag("/questions", method: 'get') do %>
  <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name"), include_blank: "All Categories" %>
  <%= submit_tag "Filter" %>
  <%= button_tag("Oldest", value: "oldest") unless filter == "oldest" %>
  <%= button_tag("Newest", value: "newest") unless filter == "newest" %>
  <%= button_tag "Most Answered", value: "most_answered" unless filter == "most answered" %>
<% end %>